@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="card col-md-6 offset-md-3 bg-light">
        <h5 class="card-header bg-light">@ViewData["Title"]</h5>

        <form method="post" class="card-body">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.UserName">Email</label>
                <input type="email" class="form-control" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" asp-for="@Model.Rememberme" class="form-check-input" />
                    <label asp-for="@Model.Rememberme" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="@Model.Rememberme" class="text-warning"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit" value="Login">
                    <i class="fa fa-unlock"></i>
                    Login
                </button>
            </div>
        </form>
    </div>
</div>
