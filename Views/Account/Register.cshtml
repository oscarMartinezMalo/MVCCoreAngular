@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="card col-md-6 offset-md-3 bg-light">
        <h5 class="card-header bg-light">@ViewData["Title"]</h5>

        <form method="post" class="card-body">
            @*<div asp-validation-summary="ModelOnly"></div>*@
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.Email">Email</label>
                <input type="email" class="form-control" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input type="password" class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-warning"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit" value="Register">
                    <i class="fa fa-unlock"></i>
                    Register
                </button>
            </div>
        </form>
    </div>
</div>
