@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="card col-md-6 offset-md-3 bg-light">
        <h5 class="card-header bg-light">@ViewData["Title"]</h5>

        <form method="post" class="card-body">
            @*<div asp-validation-summary="All"></div>*@
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input class="form-control" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input type="email" class="form-control" asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject"></label>
                <input class="form-control" asp-for="@Model.Subject">
                <span asp-validation-for="@Model.Subject" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Message"></label>
                <textarea class="form-control" asp-for="@Model.Message" rows="3"></textarea>
                <span asp-validation-for="@Model.Message" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-envelope"></i>
                    Send
                </button>
                @if (!(ViewBag.UserMessage is null))
                {
                    <div class="alert alert-success mt-2 alert-link" role="alert">@ViewBag.UserMessage</div>
                }
            </div>
        </form>
    </div>
</div>



